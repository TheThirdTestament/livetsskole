@model livetsskole.ViewModels.NewsletterRegistration
@using reCAPTCHA.MVC
@{
    /**/

    Layout = null;
}
@if (TempData["success"] == null)
{

    <div class="row">
        <div class="col-sm-2">
        </div>
        <div class="col-sm-8">
            <h2>
                Hold dig opdateret om kommende udstillinger og arrangementer
            </h2>
            <br />
        </div>
    </div>


    using (Html.BeginUmbracoForm("HandleFormSubmit", "NewsletterFormSurface", new object { }, new { @class = "form-horizontal" }))
    {

        <div class="form-group row">
            @Html.LabelFor(m => m.Firstname, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.Firstname, new { @class = "form-control", placeholder = "Fornavn" })
                @Html.ValidationMessageFor(m => m.Firstname)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Lastname, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.Lastname, new { @class = "form-control", placeholder = "Efternavn" })
                @Html.ValidationMessageFor(m => m.Lastname)
            </div>
        </div>
        <div class="form-group row">
            @Html.LabelFor(m => m.Email, new { @class = "col-sm-2 control-label" })
            <div class="col-sm-5">
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control", placeholder = "Emailadresse" })
                @Html.ValidationMessageFor(m => m.Email)
            </div>
        </div>

        <div class="form-group row">
            @Html.Label(" ", new { @class = "col-sm-2 control-label" })
            <div class="col-sm-5">
                @Html.Recaptcha()
            </div>
        </div>

        <div class="form-group row">
            <div class="col-sm-5 offset-sm-2">
                <button id="contact-submit" type="submit" class="btn btn-primary input-medium">Tilmeld</button>
            </div>
        </div>
    }
}
else
{
    <p>Tak, du er nu tilmeldt vores nyhedsbrev</p>
}
